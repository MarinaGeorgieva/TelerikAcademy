@import 'utils.styl'

default-border= 1px solid #000000;
default-color= #ffffff;
form-background-color= #b35ef3;
form-border= 1px solid #603382;
btn-register-border-color= #c0afce;

body 
	linearGradient(#d292fd, 0%, #9215f2, 20%)
	color default-color
	font 14px normal Arial
	margin 0
	padding 0
	header
		padding-left 10px
		div#header-container
			clearfix()
			div#logo-container
				float left
				position relative
			div#reg-form-container
				float right
				position relative
				right 5%
				top 50%
				div
					text-align right
					label
						width 50px
						margin 5px
					input
						width 130px
						background-color form-background-color
						border form-border
						border-radius 10px
						padding 2px 5px
						margin 5px
				button
					margin-left auto
					margin-right auto
					font-weight bold
					color default-color
					background-color form-background-color
					border form-border
					border-style outset
					border-left-color btn-register-border-color
					border-top-color btn-register-border-color
					border-radius 10px
					padding 5px 8px
					&:hover
						background-color #8949b9
						border-style inset

body header nav
	width 75%
	margin 20px
	padding 12px
	border default-border
	border-radius 16px

	ul#main-nav-list
		list-style-type none
		margin 0px
		ul.sub-nav-list
			display none
			position absolute
			background-color rgba(179, 94, 243, 0.9)
			border-radius 5px
		li
			display inline-block
			a
				text-decoration none
				padding 0px 10px
				color default-color
				font 1.4em normal Arial
			a:hover
				text-decoration underline
		li:hover ul.sub-nav-list
			display block
			li
				display block
				margin 0 15px
				padding 5px 0
				border-bottom 1px solid #000
				a
					font-size 14px
			li:last-of-type
				border-bottom none				

body section 
	width 75%
	float left
	color default-color
	article
		margin 20px
		padding 10px
		border default-border
		border-radius 12px
		header
			background none
			padding 5px
			h1
				font-size 1.4em
				padding 0px
				margin 10px 0px 0px 10px
		p
			margin-top 5px
			padding-left 6px
		footer
			padding 5px
			p
				font-size 16px
				text-align right
				font-weight normal
				margin 0px 0px 10px 0px
				time
					font-family Consolas 'Lucida Console' 'DejaVu Sans Mono' monospace
				a
					text-decoration none
					color #d0a3f7
				&:hover
					text-decoration underline
					
body aside
	float left
	width 23%
	margin-top 25px
	> ul
		list-style-type none
		padding-left 30px;
		> li
			margin 15px 0px
			padding 15px
			border default-border
			border-radius 5px
			h2
				font-size 1.1em
				font-weight bold
			p
				margin 10px 5px
				font-size 14px
				a
					color #aaaaaa
					text-decoration none
				strong
					color #cccccc
					font-weight bold
					font-style normal
				em
					color #cccccc
					font-weight normal
					font-style italic
			ul
				list-style-type none
				margin 10px 0px
				padding-left 0px
				li
					margin 5px 0px 0px 10px
					background url(images/li-dot.png) no-repeat
					background-position 0 50%
					padding-left 25px

body footer
	clear both
	padding 15px 0px 25px 0px
	p
		font-size 1.2em
		font-weight bold
		text-align center